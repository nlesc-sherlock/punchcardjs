{
  "name": "punchcards",
  "version": "1.0.0",
  "description": "Punchcard visualization using TypeScript and D3.js",
  "main": "./dist/punchcards.js",
  "scripts": {
    "postinstall": "bower install && typings install",
    "tslint": "tslint --config tslint.json ./src/**/*.ts",
    "pretsc": "npm run tslint",
    "tsc": "tsc --project .",
    "predist": "trash dist/ && mkdirp dist",
    "dist": "browserify --debug build/punchcards.js --outfile dist/punchcards.js --standalone punchcards",
    "test": "karma start karma.conf.js",
    "precover": "trash sites/coverage/ && npm run tsc && npm run dist",
    "cover": "npm run test && npm run remap-istanbul-json && npm run remap-istanbul-html",
    "remap-istanbul-json": "remap-istanbul --input sites/coverage/coverage.json --output sites/coverage/coverage-remapped.json",
    "remap-istanbul-html": "remap-istanbul --input sites/coverage/coverage-remapped.json --output sites/coverage/coverage-remapped --type html --exclude 'node_modules'",
    "pretsdoc": "npm run clean-tsdoc && mkdirp sites/tsdoc",
    "tsdoc": "typedoc --out sites/tsdoc/ .",
    "clean": "npm run clean-build & npm run clean-dist & npm run clean-sites",
    "clean-build": "trash build/",
    "clean-dist": "trash dist/",
    "clean-sites": "npm run clean-cover & npm run clean-demo & npm run clean-tsdoc",
    "clean-cover": "trash sites/coverage/",
    "clean-demo": "trash sites/demo/*.js sites/demo/*.css sites/demo/fonts/glyphicons-halflings-regular.*",
    "clean-tsdoc": "trash sites/tsdoc/",
    "clean-downloaded": "trash bower_components/ typings/ node_modules/",
    "purge": "npm run clean & npm run clean-downloaded",
    "copy-sites-demo-deps": "npm run copy-sites-demo-js && npm run copy-sites-demo-css && npm run copy-sites-demo-fonts",
    "copy-sites-demo-css": "cp src/*.css bower_components/bootstrap/dist/css/bootstrap.min.css bower_components/bootstrap/dist/css/bootstrap-theme.min.css sites/demo/",
    "copy-sites-demo-fonts": "cp bower_components/bootstrap/dist/fonts/* sites/demo/fonts/",
    "copy-sites-demo-js": "cp bower_components/crossfilter/crossfilter.min.js bower_components/moment/min/moment.min.js bower_components/d3/d3.min.js sites/demo/",
    "predemo": "npm run clean-demo && mkdirp sites/demo/fonts && npm run copy-sites-demo-deps",
    "demo": "npm run tsc && npm run dist",
    "postdemo": "cp dist/punchcards.js sites/demo/",
    "everything": "npm run demo && npm run tsdoc && npm run cover"
  },
  "keywords": [
    "typescript",
    "punchcard",
    "visualization"
  ],
  "author": "Johan Hidding, Mateusz Kuzak, Jurriaan H. Spaaks, Lourens Veen, Faruk Diblen",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nlesc-sherlock/punchcardjs.git"
  },
  "devDependencies": {
    "bower": "^1.7.9",
    "browserify": "^13.0.1",
    "istanbul": "^0.4.4",
    "jasmine-core": "^2.4.1",
    "karma": "^1.2.0",
    "karma-coverage": "^1.1.1",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-json-fixtures-preprocessor": "0.0.6",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-spec-reporter": "0.0.26",
    "mkdirp": "^0.5.1",
    "remap-istanbul": "^0.6.4",
    "trash-cli": "^1.3.0",
    "tslint": "^3.9.0",
    "typedoc": "^0.4.1",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"
  },
  "dependencies": {}
}

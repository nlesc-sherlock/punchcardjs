{
  "name": "punchcardjs",
  "version": "1.0.0",
  "description": "Punchcard visualization using TypeScript and D3.js",
  "main": "index.js",
  "scripts": {
    "postinstall": "node ./node_modules/bower/bin/bower install",
    "tslint": "tslint --config tslint.json ./src/ts/**/*.ts",
    "tsc": "tsc --project .",
    "predist": "trash dist/ && mkdirp dist",
    "dist": "browserify build/ts/punchcards.js --outfile dist/punchcards.js --standalone punchcards",
    "test": "tape ./test/**/*.test.js | tap-spec",
    "clean": "trash build/ dist/",
    "purge": "npm run clean & trash bower_components/ typings/ node_modules/",
    "prewatch": "trash dist/ && mkdirp dist"
  },
  "keywords": [
    "typescript",
    "punchcard",
    "visualization"
  ],
  "author": "Johan Hidding, Mateusz Kuzak, Jurriaan H. Spaaks, Lourens Veen, Faruk Diblen",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nlesc-sherlock/punchcardjs.git"
  },
  "devDependencies": {
    "bower": "^1.7.9",
    "browserify": "^13.0.1",
    "mkdirp": "^0.5.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1",
    "trash-cli": "^1.3.0",
    "tslint": "^3.9.0",
    "typescript": "^1.8.10"
  },
  "dependencies": {}
}

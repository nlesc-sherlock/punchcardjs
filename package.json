{
  "name": "punchcards",
  "version": "1.0.0",
  "description": "Punchcard visualization using TypeScript and D3.js",
  "main": "./dist/punchcards.js",
  "scripts": {
    "postinstall": "bower install && typings install",
    "tslint": "tslint --config tslint.json ./src/ts/**/*.ts",
    "tsc": "tsc --project .",
    "predist": "trash dist/ && mkdirp dist",
    "dist": "browserify --debug build/ts/punchcards.js --outfile dist/punchcards.js --standalone punchcards",
    "test": "tape ./test/**/*.test.js | tap-spec",
    "preistanbul": "trash test-coverage/",
    "istanbul": "istanbul cover --config .istanbul.yml test/ts/punchcards/colormap.test.js && npm run remap-istanbul-json && npm run remap-istanbul-html",
    "remap-istanbul-json": "remap-istanbul --input test-coverage/coverage.json --output test-coverage/coverage-remapped.json",
    "remap-istanbul-html": "remap-istanbul --input test-coverage/coverage-remapped.json --output test-coverage/coverage-remapped --type html --exclude 'node_modules'",
    "pretsdoc": "trash dist/doc/ && mkdirp dist/doc",
    "tsdoc": "typedoc --out dist/doc/ .",
    "clean": "trash build/ dist/ site/js/ site/css/ test-coverage/ site/fonts/",
    "purge": "npm run clean & trash bower_components/ typings/ node_modules/",
    "copy-site-deps": "npm run copy-site-js && npm run copy-site-css && npm run copy-site-fonts",
    "copy-site-css": "cp src/css/punchcards/*.css bower_components/bootstrap/dist/css/bootstrap.min.css bower_components/bootstrap/dist/css/bootstrap-theme.min.css site/css",
    "copy-site-fonts": "cp bower_components/bootstrap/dist/fonts/* site/fonts/",
    "copy-site-js": "cp bower_components/crossfilter/crossfilter.min.js bower_components/moment/min/moment.min.js bower_components/d3/d3.min.js site/js",
    "presite": "trash site/js/ && mkdirp site/js && trash site/css/ && mkdirp site/css && trash site/fonts/ && mkdirp site/fonts && npm run copy-site-deps",
    "site": "npm run tslint && npm run tsc && npm run dist && npm run test",
    "postsite": "cp dist/punchcards.js site/js/"
  },
  "keywords": [
    "typescript",
    "punchcard",
    "visualization"
  ],
  "author": "Johan Hidding, Mateusz Kuzak, Jurriaan H. Spaaks, Lourens Veen, Faruk Diblen",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nlesc-sherlock/punchcardjs.git"
  },
  "devDependencies": {
    "bower": "^1.7.9",
    "browserify": "^13.0.1",
    "istanbul": "^0.4.3",
    "mkdirp": "^0.5.1",
    "remap-istanbul": "^0.6.4",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1",
    "trash-cli": "^1.3.0",
    "tslint": "^3.9.0",
    "typedoc": "^0.4.1",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"
  },
  "dependencies": {}
}
